<?xml version="1.0" encoding="utf-8" ?>
<DataTemplate xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DontForgetApp.Controls.CalendarHeader">
    <Grid
        Margin="0,2"
        Padding="0"
        HorizontalOptions="Fill"
        IsVisible="true"
        VerticalOptions="Start"
        RowDefinitions="Auto"
        ColumnDefinitions="1*,3*,1*">
        <Border
            Grid.Column="0"
            Padding="0"
            BackgroundColor="White"
            Stroke="Orange"
            StrokeShape="RoundRectangle 18"           
            HeightRequest="36"
            HorizontalOptions="Center"
            VerticalOptions="Center"
            WidthRequest="36">
            <Label
                FontAttributes="Bold"
                FontSize="25"
                HorizontalOptions="Center"
                HorizontalTextAlignment="Center"
                InputTransparent="True"
                Text="&#xf060;"
                TextColor="DarkGreen"
                VerticalOptions="Center"
                VerticalTextAlignment="Center" />
            <Border.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding PrevLayoutUnitCommand}" />
            </Border.GestureRecognizers>
        </Border>

        <Label
            Grid.Column="1"
            FontAttributes="Bold"
            FontSize="Medium"
            HorizontalOptions="Center"
            TextColor="DarkBlue"
            VerticalOptions="Center">
            <Label.FormattedText>
                <FormattedString>
                    <Span Text="January" />
                    <Span Text=", " />
                    <Span Text="2025" />
                </FormattedString>
            </Label.FormattedText>
        </Label>

        <Border
            Grid.Column="2"
            Padding="0"
            BackgroundColor="White"
            Stroke="Orange"
            StrokeShape="RoundRectangle 18"            
            HeightRequest="36"
            HorizontalOptions="Center"
            VerticalOptions="Center"
            WidthRequest="36">
            <Label
                FontAttributes="Bold"
                FontSize="25"
                HorizontalOptions="Center"
                HorizontalTextAlignment="Center"
                InputTransparent="True"
                Text="&#xf061;"
                TextColor="DarkGreen"
                VerticalOptions="Center"
                VerticalTextAlignment="Center" />
            <Border.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding NextLayoutUnitCommand}" />
            </Border.GestureRecognizers>
        </Border>
    </Grid>
</DataTemplate>