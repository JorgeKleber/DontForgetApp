<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="DontForgetApp.View.DetailPopupView"
             Size="350,450"
             Color="Transparent"
             CanBeDismissedByTappingOutsideOfPopup="True">
    <VerticalStackLayout>
        <VerticalStackLayout Padding="10" >

            <Border Stroke="Gray"
                    StrokeThickness="1"
                    BackgroundColor="White"
                    HorizontalOptions="Fill"
                    VerticalOptions="Start"
                    Padding="10">

                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="15"/>
                </Border.StrokeShape>

                <Grid>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="70"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Image Source="reminder_icon" Grid.Row="0" Aspect="Center"/>

                    <VerticalStackLayout Spacing="10" Grid.Row="1">

                        <Label Text="{Binding ReminderSelected.Title}"
                               FontSize="Medium"
                               FontAttributes="Bold"
                               HorizontalOptions="Center" />

                        <Label Text="{Binding ReminderSelected.Description}" FontSize="Small" HorizontalTextAlignment="Center" HorizontalOptions="Center"/>

                        <Label Text="{Binding ReminderSelected.ReminderDateTime}" FontSize="Small" HorizontalOptions="Center"/>

                    </VerticalStackLayout>

                    <Grid Grid.Row="2" Padding="10">

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="0" Margin="0,0,10,0" Command="{Binding DeleteReminder}" Text="Fechar" BackgroundColor="DarkRed"/>
                        <Button Grid.Column="1" Command="{Binding EditReminder}" Text="Editar" />
                    </Grid>

                </Grid>
            </Border>

        </VerticalStackLayout>
    </VerticalStackLayout>
</toolkit:Popup>