<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DontForgetApp.View.HomeView"
             xmlns:local="clr-namespace:DontForgetApp.ViewModel"
             Title="Don't Forget">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="70"/>
        </Grid.RowDefinitions>
        
        <CollectionView ItemsSource="{Binding Reminders}" 
                        EmptyView="Ainda não há lembretes a serem exibidos."
                        SelectionMode="Single"
                        SelectedItem="{Binding ReminderSelected}"
                        Grid.Row="0">

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <SwipeView>
                        <SwipeView.LeftItems>
                            <SwipeItems>
                                <SwipeItem BackgroundColor="OrangeRed"
                                           Command="{Binding Source={RelativeSource AncestorType={x:Type local:HomeViewModel}}, Path=DeleteReminder}"
                                           Text="Delete"/>
                            </SwipeItems>
                        </SwipeView.LeftItems>
                        <Grid>
                            <Label Text="{Binding Title}"/>
                        </Grid>
                    </SwipeView>
                </DataTemplate>
            </CollectionView.ItemTemplate>
            
        </CollectionView>
        <Button Text="Teste Navigation"
                Command="{Binding AddNewReminder}"
                VerticalOptions="Center"
                Margin="15"
                Grid.Row="1"/>
        

    </Grid>
</ContentPage>